{
    "name": "devora-as/custom-cookie-consent",
    "description": "A lightweight, customizable cookie consent solution with Google Consent Mode v2 integration.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Devora AS",
            "email": "support@devora.no",
            "homepage": "https://devora.no"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "phpmd/phpmd": "^2.12",
        "wp-cli/wp-cli-bundle": "^2.6",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress",
        "phpmd": "phpmd . text ./tools/phpmd-ruleset.xml --exclude vendor/,node_modules/,tests/",
        "setup": "bash ./tools/setup-dev-environment.sh",
        "run-tests": "bash ./tools/run-tests.sh",
        "auto-fix": "php ./tools/auto-fix.php",
        "generate-test": "php ./tools/generate-tests.php",
        "a11y-test": "tools/run-a11y-tests.sh",
        "setup-e2e": "tools/setup-e2e-tests.sh",
        "test:e2e": "tools/run-e2e-tests.sh",
        "test:all": "composer run run-tests && composer run a11y-test && composer run test:e2e",
        "install-hooks": "tools/install-git-hooks.sh"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
} 